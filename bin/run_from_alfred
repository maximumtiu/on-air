#!/bin/bash

job_exists() {
  crontab -l | grep "air"
}

if [[ -n $(job_exists) ]]; then
  crontab -e
  echo "cron job removed"
  crontab -l
else
  echo "0/2 * * * * /Users/Megan/Code/Ruby/on-air/bin/run_from_cron_gen >/tmp/stdout.log 2>/tmp/stderr.log"
  sleep 7
  crontab -e
  echo "cron job set:"
  crontab -l
fi
